Vetores introdução 18_09_24

O que é vetores ??

#include <stdio.h>

int v[4]; //quantidade de elemnetos que vou armazenar
float v1[3];
int main ()
{
  v[0] = 10;
  v[1] = 20;
  v[2] = 3;
  v[3] = 8;

  for(int i = 0; i < 3; i++)
  {
    printf("Digite um valor: ");
    scanf("%f", &v1[i]);
  }

  for(int i = 0; i < 3; i++)
  {
    printf("\n O valor de v1[%d] = %.2f", i, v1[i]);

  }

  return 0;
}


#include <stdio.h>


int mat [2][3];

int main ()
{

  for (int  i =0; i < 2; i++){ //Para cada vez que executar esse for
    for (int j =0; j <3; j++){ //executar todo esse for aqui
      printf("Digite um número: ");
      scanf("%d", &mat[i][j]);

    }
  }
  for(int i=0; i<2; i++){
    for(int j=0; j<3; j++)
      printf("\nO valor de mat[%d][%d] = %d", i, j, mat[i][j]);
  }
  

  return 0;
}
