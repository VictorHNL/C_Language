#include <stdio.h>

int main() {
  float num, soma;
  printf("\nDigite um número: ");
  scanf("%f", &num);
  soma = num + 5;
  printf("\nO valor da variável 'num' é: %.0f", soma);

  return 0;
}
///////////////////////////////////////////////////////////
#include <stdio.h>

int main() {
  char letra;
  printf("\nDigite uma letra: ");
  scanf("%c", &letra);

  printf("\nO valor da soma é: %d", soma);
  return 0;
}
